					force: true
				}, function() {
					plus.runtime.restart()
				})
			},
			createTask(downloadLink) {
				//判断是否已经存在任务
				if (this.packgePath) {
					this.installPackge()
				} else {
					// 创建下载任务对象
					this.downloadTask = uni.downloadFile({
						url: downloadLink,
						success: (res) => {
							if (res.statusCode === 200) {
								// 保存下载的安装包
								uni.saveFile({
									tempFilePath: res.tempFilePath,
									success: (res) => {
										this.packgePath = res.savedFilePath
										// 进行安装
										this.installPackge()
										// 任务完成，关闭下载任务
										this.closeTask()
									}
								})
